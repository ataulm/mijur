<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Mijur" parent="android:Theme.Holo">
    <item name="android:windowBackground">@color/app_background</item>
    <item name="android:actionBarStyle">@style/Mijur.ActionBar</item>
  </style>

  <style name="Mijur.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
    <item name="android:background">@color/actionbar</item>
  </style>

  <style name="Mijur.ActionBar.Immersive">
    <item name="android:background">@color/actionbar_overlay</item>
  </style>

  <style name="Mijur.Gallery" />

  <style name="Mijur.Gallery.ListView">
    <item name="android:paddingLeft">@dimen/gallery_list_padding_left</item>
    <item name="android:paddingTop">@dimen/gallery_list_padding_top</item>
    <item name="android:paddingRight">@dimen/gallery_list_padding_right</item>
    <item name="android:paddingBottom">@dimen/gallery_list_padding_bottom</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:scrollbars">none</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">@dimen/gallery_list_divider_height</item>
  </style>

  <style name="Mijur.Post" />

  <style name="Mijur.Post.ListView">
    <item name="android:paddingLeft">@dimen/post_list_padding_left</item>
    <item name="android:paddingTop">@dimen/post_list_padding_top</item>
    <item name="android:paddingRight">@dimen/post_list_padding_right</item>
    <item name="android:paddingBottom">@dimen/post_list_padding_bottom</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:scrollbars">none</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">@dimen/post_list_divider_height</item>
  </style>

  <style name="Mijur.Post.Title">
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingRight">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="font">robotoSlabBold</item>
  </style>

  <style name="Mijur.Post.AlbumImages">
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingRight">0dp</item>
    <item name="android:paddingBottom">0dp</item>
  </style>

  <style name="Mijur.Post.AlbumDescription">
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:background">@android:color/holo_blue_dark</item>
    <item name="font">robotoSlabLight</item>
  </style>

  <style name="Mijur.Post.AlbumShowFullButton">
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingRight">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:gravity">center</item>
    <item name="font">robotoSlabBold</item>
  </style>

  <style name="Mijur.Fullscreen">
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:actionBarStyle">@style/Mijur.ActionBar.Immersive</item>
  </style>

  <style name="Mijur.Fullscreen.Caption">
    <item name="android:background">@color/caption_overlay</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingBottom">16dp</item>
  </style>

  <style name="Mijur.Fullscreen.CaptionTitle">
    <item name="font">robotoSlabBold</item>
  </style>

  <style name="Mijur.Fullscreen.CaptionDescription">
    <item name="font">robotoSlabLight</item>
  </style>

</resources>
